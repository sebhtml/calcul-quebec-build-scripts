#%Module1.0
#####################################################################
##
## Cairo
##
##
proc ModulesHelp { } {
       puts stderr "\tAdds the Cairo library to your environment  "
}

module-whatis "(Category_______) misc-libs"
module-whatis "(Name___________) Cairo"
module-whatis "(Version________) 1.12.2"

conflict misc-libs/cairo
prereq load compilers/intel/12.0.4
prereq load misc-libs/pixman

set                synopsys          /software/misc-libs/cairo/1.12.2
prepend-path       PATH              $synopsys/bin
prepend-path       LD_LIBRARY_PATH   $synopsys/lib
prepend-path       C_INCLUDE_PATH    $synopsys/include
prepend-path       PKG_CONFIG_PATH   $synopsys/lib/pkgconfig
